{
  "name": "@nuxt/components",
  "version": "2.0.0",
  "description": "Auto Import Components for Nuxt.js",
  "repository": "nuxt/components",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js",
    "./": "./",
    "./loader": "./dist/loader.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib",
    "templates"
  ],
  "scripts": {
    "build": "siroc build",
    "dev": "nuxt-ts test/fixture",
    "postinstall": "yarn link && yarn link @nuxt/components",
    "lint": "eslint --ext .ts,.js,.vue .",
    "prepublishOnly": "yarn build",
    "release": "yarn test && standard-version && git push --follow-tags && npm publish",
    "test": "yarn lint && jest --verbose"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "glob": "^7.1.6",
    "globby": "^11.0.2",
    "scule": "^0.1.1",
    "semver": "^7.3.4",
    "upath": "^2.0.1",
    "vue-template-compiler": "^2.6.12"
  },
  "devDependencies": {
    "@babel/preset-env": "latest",
    "@babel/preset-typescript": "latest",
    "@nuxt/test-utils": "latest",
    "@nuxt/types": "latest",
    "@nuxt/typescript-build": "latest",
    "@nuxt/typescript-runtime": "latest",
    "@nuxtjs/eslint-config-typescript": "latest",
    "@types/jest": "latest",
    "@types/loader-utils": "latest",
    "@types/lodash": "latest",
    "@types/semver": "latest",
    "eslint": "latest",
    "jest": "latest",
    "loader-utils": "latest",
    "nuxt-edge": "latest",
    "pug": "latest",
    "pug-plain-loader": "latest",
    "siroc": "latest",
    "standard-version": "latest"
  }
}

{
  "name": "@nuxt/components",
  "version": "1.0.7",
  "description": "Auto Import Components for Nuxt.js",
  "repository": "nuxt/components",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib",
    "templates"
  ],
  "scripts": {
    "build": "yarn clean && bili src/index.ts,src/loader.ts",
    "clean": "rimraf dist",
    "dev": "nuxt-ts test/fixture",
    "lint": "eslint --ext .ts,.js,.vue .",
    "release": "yarn test && yarn build && standard-version && git push --follow-tags && npm publish",
    "test": "yarn lint && jest --verbose"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.0",
    "glob": "^7.1.6",
    "globby": "^11.0.1",
    "lodash": "^4.17.15",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "latest",
    "@nuxt/types": "^2.13.2",
    "@nuxt/typescript-build": "latest",
    "@nuxt/typescript-runtime": "latest",
    "@nuxtjs/eslint-config-typescript": "latest",
    "@types/jest": "latest",
    "@types/loader-utils": "latest",
    "@types/lodash": "latest",
    "@types/semver": "latest",
    "bili": "latest",
    "eslint": "latest",
    "jest": "latest",
    "nuxt-edge": "latest",
    "pug": "latest",
    "pug-plain-loader": "latest",
    "rimraf": "latest",
    "rollup-plugin-typescript2": "latest",
    "standard-version": "latest",
    "ts-jest": "latest",
    "typescript": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
